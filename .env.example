# 환경 설정 (복사해서 .env로 사용하세요)
ENVIRONMENT=development

# 서버 설정
HOST=0.0.0.0
PORT=8000
DEBUG=true

# 외부 접속용 IP (다른 기기에서 접속 시 사용)
EXTERNAL_IP=49.164.140.4

# 데이터베이스 설정
DATABASE_URL=sqlite:///./campuson.db
DATABASE_URL_ASYNC=sqlite+aiosqlite:///./campuson.db

# Qdrant 벡터 데이터베이스 설정 (RAG 및 AI SQL)
QDRANT_URL=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=kb_learning_vectors
QDRANT_API_KEY=

# Redis 캐싱 설정
REDIS_URL=redis://localhost:6379

# JWT 보안 설정
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI 모델 API 키들
OPENAI_API_KEY=your-openai-api-key

# HyperClova vLLM 설정 (로컬 모델 실행)
VLLM_HOST=http://localhost:8000
HYPERCLOVA_MODEL_NAME=naver-hyperclovax/HyperCLOVAX-SEED-Vision-Instruct-3B

# CORS 설정
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# 파일 업로드 설정
MAX_FILE_SIZE_MB=50
UPLOAD_DIRECTORY=uploads

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 보안 설정
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://kbu-ai-team.kro.kr","https://www.kbu-ai-team.kro.kr"]

# vLLM 임베딩 설정 (로컬 모델)
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32

# AI 모델 설정 (vLLM 기반)
AI_MODEL_NAME=naver-hyperclovax/HyperCLOVAX-SEED-Vision-Instruct-3B
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.7

# 이메일 설정 (SMS 인증 등)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password 